{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "controllers": [
        "src/controllers"
      ],
      "dto": [
        "src/dto"
      ],
      "internal": [
        "src/internal"
      ],
      "services": [
        "src/services"
      ],
      "strings": [
        "src/strings"
      ],
      "utils": [
        "src/utils"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}