{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "controllers": [
        "src/controllers"
      ],
      "data/types": [
        "src/data/types"
      ],
      "data/models": [
        "src/data/models"
      ],
      "internal": [
        "src/internal"
      ],
      "services": [
        "src/services"
      ],
      "utils": [
        "src/utils"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}